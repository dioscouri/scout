<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" client="administrator" position="cpanel" method="upgrade">
	<name>Recent Activity</name>
    <version>0.6.0</version>
    <creationDate>April 2010</creationDate>
    <author>Dioscouri.com</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <copyright>2010 Dioscouri.com</copyright>
    <license>GNU General Public License</license>
	<description>Displays recent activity on the site</description>
	<files>
		<filename module="mod_scout_activity">mod_scout_activity.php</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>
    
    <languages folder="languages">
        <language tag="en-GB">en-GB.mod_scout_activity.ini</language>
    </languages>
    
	<params>
		<param name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
			<option value="0">Never</option>
	  	</param>
		<param name="limit" type="list" default="5" label="Number of log items to display" description="Select how many log items you want to display">
			<option value="1">1</option>
			<option value="5">5</option>
			<option value="10">10</option>
			<option value="20">20</option>
			<option value="30">30</option>
	  	</param>
	 
	 </params>
</install>

